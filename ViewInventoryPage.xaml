<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project2._3.ViewInventoryPage">

	<StackLayout Padding="10">
		<Label Text="Inventory Grid" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />

		<CollectionView x:Name="InventoryCollectionView">
			<CollectionView.ItemsLayout>
				<GridItemsLayout Span="2" Orientation="Vertical" />
			</CollectionView.ItemsLayout>
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Frame BorderColor="LightGray" Padding="10" Margin="5" HasShadow="True">
						<StackLayout Spacing="5">
							<Label Text="{Binding ItemId}" FontAttributes="Bold" />
							<Label Text="{Binding ItemName}" />
							<Label Text="{Binding ItemDescription}" />
							<Label Text="{Binding ItemPrice, StringFormat='Price: {0:C}'}" />
							<Label Text="{Binding ItemAmountAvailable, StringFormat='Available: {0}'}" />
						</StackLayout>
					</Frame>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</StackLayout>

</ContentPage>
