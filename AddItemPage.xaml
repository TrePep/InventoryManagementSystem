<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project2._3.AddItemPage">

	<ScrollView>
		<VerticalStackLayout
            Padding="30,0"
            Spacing="25">

			<Entry x:Name="NameEntry" Placeholder="Name" />
			<Entry x:Name="DescriptionEntry" Placeholder="Description" />
			<Entry x:Name="PriceEntry" Placeholder="Price" Keyboard="Numeric" />
			<Entry x:Name="AmountEntry" Placeholder="Amount Available" Keyboard="Numeric" />

			<Button Text="Submit" Clicked="OnSubmitClicked" HorizontalOptions="FillAndExpand" />

		</VerticalStackLayout>
	</ScrollView>

</ContentPage>